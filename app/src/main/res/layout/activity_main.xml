<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="right|bottom"
        android:padding="10dp"
        android:textSize="55sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#F44336"
            android:onClick="onDigit"
            android:text="@string/_7"
            android:textSize="25sp">

        </Button>

        <Button
            android:id="@+id/button_8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="6dp"
            android:backgroundTint="#F44336"
            android:text="@string/_8"
            android:onClick="onDigit"
            android:textSize="25sp">

        </Button>

        <Button
            android:id="@+id/button_9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="6dp"
            android:backgroundTint="#F44336"
            android:onClick="onDigit"
            android:text="@string/_9"
            android:textSize="25sp">

        </Button>

        <Button
            android:id="@+id/button_divide"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="6dp"
            android:backgroundTint="#673AB7"
            android:onClick="onOperator"
            android:text="@string/_divide"
            android:textSize="25sp">

        </Button>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:orientation="horizontal">

        <Button
            android:id="@+id/button_4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#F44336"
            android:onClick="onDigit"
            android:text="@string/_4"
            android:textSize="25sp">

        </Button>

        <Button
            android:id="@+id/button_5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="6dp"
            android:backgroundTint="#F44336"
            android:onClick="onDigit"
            android:text="@string/_5"
            android:textSize="25sp">

        </Button>

        <Button
            android:id="@+id/button_6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="6dp"
            android:backgroundTint="#F44336"
            android:onClick="onDigit"
            android:text="@string/_6"
            android:textSize="25sp">

        </Button>

        <Button
            android:id="@+id/button_multiply"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="6dp"
            android:backgroundTint="#03A9F4"
            android:onClick="onOperator"
            android:text="@string/_multiply"
            android:textSize="25sp">

        </Button>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:orientation="horizontal">

        <Button
            android:id="@+id/button_1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#F44336"
            android:onClick="onDigit"
            android:text="@string/_1"
            android:textSize="25sp">

        </Button>

        <Button
            android:id="@+id/button_2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="6dp"
            android:backgroundTint="#F44336"
            android:onClick="onDigit"
            android:text="@string/_2"
            android:textSize="25sp">

        </Button>

        <Button
            android:id="@+id/button_3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="6dp"
            android:backgroundTint="#F44336"
            android:onClick="onDigit"
            android:text="@string/_3"
            android:textSize="25sp">

        </Button>

        <Button
            android:id="@+id/button_substract"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="6dp"
            android:backgroundTint="#8BC34A"
            android:text="@string/_substract"
            android:onClick="onOperator"
            android:textSize="25sp">

        </Button>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:orientation="horizontal">

        <Button
            android:id="@+id/button_0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#F44336"
            android:onClick="onDigit"
            android:text="@string/_0"
            android:textSize="25sp">

        </Button>
        <Button
            android:id="@+id/button_dot"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#F44336"
            android:onClick="onDecimalPoint"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/_dot"
            android:textSize="25sp">

        </Button>


        <Button
            android:id="@+id/button_clear"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="6dp"
            android:backgroundTint="#E91E63"
            android:onClick="onClear"
            android:text="@string/_CLR"
            android:textSize="25sp">

        </Button>

        <Button
            android:id="@+id/button_add"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="6dp"
            android:backgroundTint="#FFC107"
            android:onClick="onOperator"
            android:text="@string/_add"
            android:textSize="25sp">

        </Button>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:orientation="horizontal">

        <Button
            android:id="@+id/button_equals"
            android:layout_width="390dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#009688"
            android:onClick="onEqual"
            android:text="@string/_equal"
            android:textSize="25sp">

        </Button>


    </LinearLayout>


</LinearLayout>